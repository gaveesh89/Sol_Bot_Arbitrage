# ============================================================================
# DEVNET CONFIGURATION - Safe Testing Environment
# ============================================================================
# This configuration uses Solana Devnet for zero-risk testing
# Devnet SOL has no real value - perfect for testing your bot!
# ============================================================================

# Solana Devnet RPC Configuration
RPC_URL=https://api.devnet.solana.com
RPC_WS_URL=wss://api.devnet.solana.com
COMMITMENT_LEVEL=confirmed
RPC_TIMEOUT_SECONDS=30

# ============================================================================
# Wallet Configuration (TEST WALLET - NO REAL FUNDS)
# ============================================================================
# OPTION 1: Test Keypair File (RECOMMENDED for Devnet)
# Generate: solana-keygen new --outfile ./devnet-wallet.json --no-bip39-passphrase
# Fund: solana airdrop 5 --url devnet --keypair ./devnet-wallet.json
WALLET_KEYPAIR_PATH=./devnet-wallet.json

# OPTION 2: Use existing devnet keypair
# WALLET_KEYPAIR_PATH=~/.config/solana/devnet.json

# Minimum balance warning threshold (Devnet SOL)
MIN_BALANCE_SOL=0.5
# ============================================================================

# Bot Behavior Configuration (SIMULATION MODE RECOMMENDED)
# Start with simulation mode, then switch to live once confident
BOT_SIMULATION_MODE=true  # Set to false for live Devnet execution

MIN_PROFIT_BPS=50  # Minimum profit: 0.5%
MAX_SLIPPAGE_BPS=100  # Maximum slippage: 1%
TRANSACTION_TIMEOUT_MS=30000
MAX_RETRIES=3
ENABLE_ARBITRAGE=true
ENABLE_SANDWICH=false  # Keep disabled for initial testing
MAX_POSITION_SIZE=100000000  # 0.1 SOL (safe amount for testing)

# Routing Configuration
MAX_HOPS=3
ENABLE_MULTI_HOP=true
PREFER_DIRECT_ROUTES=true
ROUTE_CACHE_TTL_SECONDS=300

# Devnet Test Tokens
# SOL/USDC pools on Devnet (you may need to find active pools)
MINT_1_ADDRESS=So11111111111111111111111111111111111111112
MINT_1_SYMBOL=SOL
MINT_1_DECIMALS=9
MINT_1_POOLS=
MINT_1_IS_QUOTE=true

# Note: Devnet token addresses may differ from mainnet
# You'll need to find active DEX pools on Devnet for testing
# Check: https://solscan.io/tokens?cluster=devnet

# Transaction Spam Configuration (Disabled for initial testing)
SPAM_ENABLED=false
SPAM_NUM_SUBMISSIONS=1
SPAM_DELAY_MS=100
SPAM_USE_DIFFERENT_RPCS=false

# Flash Loan Configuration (Disabled for testing)
FLASHLOAN_ENABLED=false
FLASHLOAN_PROVIDER=none
FLASHLOAN_MAX_LOAN_AMOUNT=0
FLASHLOAN_FEE_BPS=0

# Cache Configuration
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000
CACHE_ENABLE_POOL_CACHE=true

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_PORT=9090
MONITORING_LOG_LEVEL=debug  # Verbose logging for testing

# Execution Configuration
EXECUTION_PRIORITY_FEE_LAMPORTS=1000  # Minimal priority fee for Devnet
EXECUTION_MAX_COMPUTE_UNITS=1400000
EXECUTION_RETRY_DELAY_MS=1000

# DEX Configuration (Devnet may have limited DEX deployments)
DEX_RAYDIUM_ENABLED=true
DEX_ORCA_ENABLED=true
DEX_METEORA_ENABLED=true
DEX_PHOENIX_ENABLED=false
DEX_OPENBOOK_ENABLED=false
